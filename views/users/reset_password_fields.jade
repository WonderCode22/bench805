extends ../layout

block content

  .page_body.padding_top_header
    // Reset password
    section.sign_up_section.mwidth_680
      .resolution.padding_lr
        .hn2.ta_c
          h1 Reset Your password
        br
        .mwidth_320
          form.form_reset_password_email.form_style_1(action='/users/reset_password_congratulation', novalidate='novalidate')
            div
              input(type='user_password', placeholder='Password', name='user_password', required='', aria-required='true')
            div
              input(type='user_confirm_password', placeholder='Confirm password', name='user_confirm_password', required='', aria-required='true')
            .form_footer
              .form_footer_btns
                .btn_color_fill
                  button(type='submit') Send
